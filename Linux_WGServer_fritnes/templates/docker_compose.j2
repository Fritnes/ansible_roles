version: '{{version}}'
services:
  {{wggui_container_name}}:
    image: ngoduykhanh/wireguard-ui:latest
    container_name: {{wggui_container_name}}
    cap_add:
      - NET_ADMIN
    network_mode: host
    environment:
      - WGUI_USERNAME={{WGUI_USERNAME}}
      - WGUI_PASSWORD={{WGUI_PASSWORD}}
    logging:
      driver: json-file
      options:
        max-size: 50m
    volumes:
      - ./db:/app/db
      - /etc/wireguard:/etc/wireguard
