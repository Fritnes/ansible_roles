services:
  wordpress:
      image: wordpress
      links:
        - mariadb:mysql
      environment:
       - WORDPRESS_DB_PASSWORD={{dwordpress_db_password}}
       - WORDPRESS_DB_USER=root
      ports:
       - {{dwordpress_port}}:80
      volumes:
       - ./html:/var/www/html
  mariadb:
      image: mariadb
      environment:
       - MYSQL_ROOT_PASSWORD={{dwordpress_db_password}}
       - MYSQL_DATABASE=wordpress
      volumes:
       - ./database:/var/lib/mysql
