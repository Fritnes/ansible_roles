version: '{{version}}'
services:
  {{jenkins_container_name}}:
    build: .
    privileged: true
    user: root
    environment:
      TZ: "Europe/Kiev"
    ports:
      - 8081:8080
      - 50000:50000
    container_name: {{jenkins_container_name}}
    volumes:
      - ./jenkins_home:/var/jenkins_home
      - /var/run/docker.sock:/var/run/docker.sock
      - /usr/local/bin/docker:/usr/local/bin/docker
